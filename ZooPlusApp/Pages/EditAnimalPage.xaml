<Page x:Class="ZooPlusApp.Pages.EditAnimalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZooPlusApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditAnimalPage">

    <Grid>
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="150">
            <StackPanel>
                <TextBlock Text="Страна"/>
                <TextBox Text="{Binding Country}"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Ест. среда"/>
                <TextBox Text="{Binding Habitat}"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Питание"/>
                <TextBox Text="{Binding Nutrition}"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Жизнь"/>
                <TextBox Text="{Binding LifeTimeInYear}"/>
            </StackPanel>
            <Button x:Name="BSave"
                    Click="BSave_Click"
                    Content="Сохранить"/>
        </StackPanel>
    </Grid>
</Page>
